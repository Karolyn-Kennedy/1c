Адрес = Новый Структура("Город, Улица, Дом");

Адрес.Город = "Санкт-Петербург";
Адрес.Улица = "Университетская Набережная";
Адрес.Дом = 11;

Сообщить("г. " + Адрес.Город + " ул. " + Адрес.Улица + " д. " + Адрес.Дом);

ФИО = Новый Структура("Фамилия, Имя, Отчество");

ФИО.Фамилия = "Кравченко";
ФИО.Имя = "Анастасия";
ФИО.Отчество = "Александровна";
ФИО.Вставить("Возраст", 23);


//Задача: сохранить данные структуры в ИБ
//Исходные данные

Данные = Новый Структура ("Фамилия, Имя, Отчество"
                          "Кравченко", "Анастасия", "Александровна")

ФИО = Справочники.ФИО.СоздатьЭлемент();
ЗаполнитьЗначениеСвойств(ФИО, Данные);
ФИО.Наименование = Данные.Фамилия + "" + ЛЕВ(Данные.Имя, 1) + "." + ЛЕВ(Данные.Отчество, 1) + "."; 
//Кравченко А.А.
ФИО.Записать();
