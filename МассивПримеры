//как работает массив

СписокПокупок = Новый Массив(2); //2 - количество элементов
СписокПокупок[0] = "Багет";
СписокПокупок.Установить(1, "Бананы");

Сообщить(СписокПокупок.Получить(0)); //Багет
Сообщить(СписокПокупок[1]); //Бананы 

СписокПокупок.Добавить("Арахисовая паста");
Сообщить(СписокПокупок.Найти("Арахисовая паста")); //2
СписокПокупок.Вставить(2, "Соевое молоко");
Сообщить(СписокПокупок.Найти("Арахисовая паста")); //3

