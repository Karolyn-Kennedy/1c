&На клиенте

Процедура СделатьПаузу();
  Сч = 10000;
  Пока СЧ <> 0 Цикл
    
    Если Сч%10000 = 0 Тогда
      Сообщить(Сч/10000);
    КонецЕсли;
    Сч = Сч - 1;
  КонецЦикла;
КонецПроцедуры; // СделатьПаузу();
    
